; Side-set pin 0 is used for LOAD output
; Side-set pin 1 is used for SCLK output

.program SN74HC595
.side_set 2


 .wrap_target
    pull block        side 0
    set     y, 31     side 0
shiftloop:
    out     pins, 1   side 0
    jmp y-- shiftloop side 2 ; 32 loops until Y hits 0
    out     pins, 1   side 1 ; Out a zero bit
 .wrap                 ; Implicit jump to the first instruction
